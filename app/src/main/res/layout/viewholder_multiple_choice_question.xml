<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="choice"
            type="non.shahad.templatesforrle.models.MultipleChoice" />
    </data>
<non.shahad.templatesforrle.common.viewgroup.MultipleChoiceLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    considerIsSelectedOrNot="@{choice.selected}">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@{choice.answer}"
        changeTextColorIfItsSelected="@{choice.selected}"
        />

</non.shahad.templatesforrle.common.viewgroup.MultipleChoiceLayout>
</layout>